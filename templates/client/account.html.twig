{% extends 'base.html.twig' %}

{% block title %}Report index{% endblock %}

{% block body %}

<div class="flex flex-row">

        {{ include('admin/components/navbarUser.html.twig') }}

       <div class="flex flex-col w-screen px-20">
        
            <div class="bg-white-200 flex flex-row">
                <div class="container flex items-center px-6 py-4 mx-auto overflow-y-auto whitespace-nowrap">
                    <a href="{{ path('client_dashboard') }}" class="text-gray-600 white:text-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                        </svg>
                    </a>

                    <span class="mx-5 text-gray-500 white:text-gray-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </span>

                    <a href="#" class="text-gray-600 white:text-gray-200 hover:underline">
                        My account
                    </a>
                </div>
            </div>
        

        <div class="justify-center">
                <section class="bg-white white:bg-gray-900">
                    <div class="container py-10 mx-auto">
                        <h1 class="text-3xl font-semibold text-center text-gray-800 capitalize lg:text-4xl white:text-white">Update <span class="text-blue-500">My Account</span></h1>

                        <div class=" gap-8 mt-8 w-[1000px] pl-[33%]">
                            <div class="flex flex-col items-center p-6 space-y-3 bg-gray-100 rounded-xl white:bg-gray-800 content-center">
                                <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-full white:text-white white:bg-blue-500">
                                    <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1 1">
                                        <g transform="scale(.04166)">
                                            <path fill="none" d="M0 0h24v24H0Z"></path>
                                            <path fill="#4E80EF" d="M13 8c0-2.21-1.79-4-4-4C6.79 4 5 5.79 5 8c0 2.21 1.79 4 4 4s4-1.79 4-4Zm2 2v2h3v3h2v-3h3v-2h-3V7h-2v3h-3ZM1 18v2h16v-2c0-2.66-5.33-4-8-4s-8 1.34-8 4Z"></path>
                                        </g>
                                    </svg>
                                </span>

                                <h1 class="text-2xl font-semibold text-gray-700 capitalize white:text-white">New User</h1>

                                
                                    

                                    <div>
                                        <label class="text-gray-700 dark:text-dark-200 " for="Lastname">Email</label>
                                        <input value='{{ user.email }}' 
                                                class="'form-control  w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md white:bg-gray-800 white:text-gray-300 white:border-gray-600 focus:border-blue-400 white:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">    
                                    </div>

                                    <div>
                                        <label class="text-gray-700 dark:text-dark-200 " for="Lastname">Email</label>
                                        <input value='{{ user.firstname }}' 
                                                class="'form-control  w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md white:bg-gray-800 white:text-gray-300 white:border-gray-600 focus:border-blue-400 white:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">    
                                    </div>

                                    <div>
                                        <label class="text-gray-700 dark:text-dark-200 " for="Lastname">Email</label>
                                        <input value='{{ user.username }}' 
                                                class="'form-control  w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md white:bg-gray-800 white:text-gray-300 white:border-gray-600 focus:border-blue-400 white:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">    
                                    </div>

                                    <div>
                                        <label class="text-gray-700 dark:text-dark-200 " for="Lastname">Email</label>
                                        <input value='{{ user.company }}' 
                                                class="'form-control  w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-md white:bg-gray-800 white:text-gray-300 white:border-gray-600 focus:border-blue-400 white:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">    
                                    </div>

                                    

                                    
                                    
                            

                                    

                                    <button type="submit" class="btn w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-800 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-gray-600">Update</button>
                                

                                
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    

{% endblock %}