{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h1>Report</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ report.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ report.description }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ report.product }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ report.path }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ report.CreatedAt ? report.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_report_index') }}">back to list</a>

    <a href="{{ path('admin_report_edit', {'id': report.id}) }}">edit</a>

    {{ include('admin/report/_delete_form.html.twig') }}
